<%- include("../partials/header.ejs") %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center">Submit a Campground</h1>
        <div style="width: 30%; margin: 0 auto;">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Campground Name" name="title" autofocus>
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Image URL" name="image">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Description of campground" name="description">
                </div>
                <div class="form-group">
                    <button class="btn btn-block btn-primary" type="submit">Submit</button>
                </div>
                <a href="/campgrounds">Back to Campgrounds</a>
            </form>
        </div>
    </div>
</div>

