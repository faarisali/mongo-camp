<%- include("../partials/header.ejs") %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit <%= campground.name %> </h1>
        <div style="width: 30%; margin: 0 auto;">
            <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Campground Name" name="campground[name]" value="<%= campground.name %>">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Image URL" name="campground[image]" value="<%= campground.image %>">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Description of campground" name="campground[description]" value="<%= campground.description %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-block btn-primary" type="submit">Submit</button>
                </div>
                <a href="/campgrounds">Back to Campgrounds</a>
            </form>
        </div>
    </div>
</div>

<%- include("../partials/footer.ejs") %> 